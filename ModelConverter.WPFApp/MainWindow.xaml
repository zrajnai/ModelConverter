<Window x:Class="ModelConverter.WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpfApp="clr-namespace:ModelConverter.WPFApp"
        mc:Ignorable="d"
        Title="Model Converter" Height="200" Width="300">
    <Window.Resources>
        <!-- One style for each *type* of control on the window -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Margin" Value="5,5" />
            <Setter Property="Height" Value="25" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="25" />
            <Setter Property="Margin" Value="5,5" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            
        </Style>
        <wpfApp:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <StatusBar DockPanel.Dock="Bottom" Height="20" HorizontalContentAlignment="Stretch">
            <StatusBarItem HorizontalContentAlignment="Stretch">
                <ProgressBar Value="{Binding ProgressValue}" Height="10" Width="auto"
                             Visibility="{Binding Converting, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StatusBarItem>
            
        </StatusBar>

        <DockPanel>
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Command="{Binding ConvertCommand}">Convert</Button>
                <Button Command="{Binding ExitCommand}" IsEnabled="{Binding Converting, Converter={StaticResource InverseBooleanConverter}}">Exit</Button>
            </StackPanel>

            <StackPanel IsEnabled="{Binding Converting, Converter={StaticResource InverseBooleanConverter}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBox Text="{Binding InputFilePath, Mode=TwoWay}" 
                        Grid.Column="0" 
                        Grid.Row="0"></TextBox>
                    <Button 
                        Command="{Binding BrowseInputFileCommand}"
                        Grid.Column="1" 
                        Grid.Row="0"
                        >Browse...</Button>

                    <TextBox Text="{Binding OutputFilePath, Mode=TwoWay}" 
                        Grid.Column="0"
                        Grid.Row="1"></TextBox>
                    <Button
                        Command="{Binding BrowseOutputFileCommand}"
                        Grid.Column="1"
                        Grid.Row="1">Browse...</Button>

                </Grid>
            </StackPanel>

        </DockPanel>
    </DockPanel>
</Window>
